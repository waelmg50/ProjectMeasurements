@model IEnumerable<ProjectsMeasurements.Models.Operations.PlantsDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlantHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantTrunkWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantDefaultPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantHeightUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentPlant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateUser)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlantHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantTrunkWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantDefaultPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantHeightUnit.UnitNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentPlant.PlantCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateUser.UserEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
