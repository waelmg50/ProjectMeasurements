@model IEnumerable<ProjectsMeasurements.Models.BasicData.PlantsCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Plants Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryNameAr)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryNameAr)
                </td>
                @* <td>
            @if (item.ParentCategory != null)
            @Html.DisplayFor(modelItem => item.ParentCategory.CategoryNameEn)
            </td>*@
                <td>
                    @item.LastUpdateDate.ToString("yyyy-MM-dd HH:mm:ss")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                    @*<a asp-action="Index" asp-route-CategoryID="@item.ID">Sub Categories</a> |*@
                    <a asp-controller="Plants" asp-action="Index" asp-route-CategoryID="@item.ID">Plants</a>
                </td>
            </tr>
        }
    </tbody>
</table>
